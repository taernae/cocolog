<% provide(:title, "Password Reset") %>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :class => "form-horizontal well", :method => :put }) do |f| %>
	<%= devise_error_messages! %>

	<fieldset>
		<div id="legend">
			<legend class="">Password Reset</legend>
		</div>
		<%= f.hidden_field :reset_password_token %>
		<div class="control-group">
			<label class="control-label">New Password</label>
			<div class="controls">
				<%= f.password_field :password %>
			</div>
		</div>
		<div class="control-group">
			<label class="control-label">Confirm New Password</label>
			<div class="controls">
				<%= f.password_field :password_confirmation %>
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
				<%= f.submit "Change Password", :class => "btn btn-success" %>
			</div>
		</div>

		<div class="clear"></div>
		<div align="right">
			<%= render 'devise/shared/links' %>
		</div>
	</fieldset>
<% end %>

