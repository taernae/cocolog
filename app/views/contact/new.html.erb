<%= form_for(@message, :url => contact_path, :html => {:class => "form-horizontal well"}) do |f| %>
	<fieldset>
		<div id="legend">
			<legend class="">Contact Us</legend>
		</div>
		<div class="control-group">
			<label class="control-label">Name</label>
			<div class="controls">
				<%= f.text_field :name, :value => (user_signed_in? ? current_user.username : "") %>
			</div>
		</div>
		<div class="control-group">
			<label class="control-label">Your Email</label>
			<div class="controls">
				<%= f.email_field :email, :value => (user_signed_in? ? current_user.email : "") %>
			</div>
		</div>
		<div class="control-group">
			<label class="control-label">Subject</label>
			<div class="controls">
				<%= f.text_field :subject %>
			</div>
		</div>
		<div class="control-group">
			<label class="control-label">Message</label>
			<div class="controls">
				<%= f.text_area :body %>
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
				<%= submit_tag "Send" %>
			</div>
		</div>
	</fieldset>
<% end %>
