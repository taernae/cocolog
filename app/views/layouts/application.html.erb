<body class="preview">
	<div class="container-fluid">
    <div class="navbar navbar-fluid-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">CocoLog</a>
          <div class="container-fluid nav-collapse">
            <ul class="nav pull-right">
               <li><%= link_to "Submit", '/logs/new/' %></li>
               <li><%= link_to "Logs", '/logs' %></li>
               <li><%= link_to "FAQ", '/faq' %></li>
               <li><a href="http://blog.taernae.net/">Blog <%= Time.now < Date.new(2017,3,20) ? "<small class=\"text-error\">NEW</small>".html_safe : "" %></a></li>
               <% if user_signed_in? %>
               <li><%= link_to('Sign out', destroy_user_session_path, :method => :delete) %></li>
               <li><%= link_to "Profile", "/profile" %></li>
               <% else %>
               <li><%= link_to "Sign in", '/users/sign_in' %></li>
               <li><%= link_to "Sign up", '/users/sign_up' %></li>
               <% end %>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
		<div class="row-fluid">
			<%= render 'layouts/flash_messages' %>
		</div>
		<div class="row-fluid">
			<%= yield %>
		</div>
		<hr>
		<footer id="footer">
			<p class="pull-right"><a href="#">Back to top</a></p>
			<div class="links">
				<a href="http://blog.taernae.net/">Blog</a>
				<a href="/about">About</a>
				<a href="/feed">RSS</a>
				<a href="https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&hosted_button_id=XN5GZRNF5LV6E">Contribute</a>
				<a href="/contact">Contact</a>
				<% if user_signed_in? %>
				<a href="/profile">Profile</a>
				<% else %>
				<a href="/users/sign_in">Sign In</a>
				<a href="/users/sign_up">Sign Up</a>
				<% end %>
			</div>
			Made by <a target="_blank" href="http://codemonger.net">codemonger.net</a>.<br />
			Inspired and partially funded by Martin Tee.<br />
			Made using <a href="http://rubyonrails.org/">Ruby on Rails</a> and <a href="http://twitter.github.com/bootstrap/">Twitter Bootstrap</a>. Hosted on <a href="http://www.nginx.com/">NGINX</a>.<br />
		</footer>
	</div>
</body>
</html>
