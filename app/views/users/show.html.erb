<div class="well">
	<h3>Posted logs</h3>
	<table class="table table-bordered">
		<thead>
			<th>Title</th>
			<th>Game</th>
			<th>Category</th>
			<th>Private</th>
			<th>Posted at</th>
		</thead>
		<% @logs.each do |log| %>
		<tr>
			<td><%= link_to log.title, log %></td>
			<td><%= @games[log.game] %></td>
			<td><%= @categories[log.category] %></td>
			<td><%= log.private ? "yes" : "no" %></td>
			<td><%= log.created_at %></td>
		</tr>
		<% end %>
	</table>
</div>
<br />
<div class="well">
        <table class="table table-bordered">
                <tr>
                        <td>ID</td>
                        <td><%= @user.id %></td>
                </tr>
                <tr>
                        <td>Username</td>
                        <td><%= @user.username %></td>
                </tr>
                <tr>
                        <td>Email</td>
                        <td><%= @user.email %></td>
                </tr>
                <tr>
                        <td>Created At</td>
                        <td><%= @user.created_at %></td>
                </tr>
                <tr>
                        <td>Roles</td>
                        <td><%= @user.roles.collect {|r| r.name }.join(", ") %></td>
                </tr>
        </table>
        <%= link_to "Edit", edit_user_path(@user), :class => "label label-info" %>
        <%= link_to "Delete", @user, :confirm => "Are you sure?", :method => :delete, :class => "label label-important" %>
</div>
